{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "package.json", "package-lock.json"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
